<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>
  <body>
    <% include partials/loader %>
    <header>
      <% include partials/header %>
    </header>
    <div class="tt-breadcrumb">
      <div class="container">
        <ul>
          <li><a href="/">Trang chủ</a></li>
          <li>Đăng ký taì khoản</li>
        </ul>
      </div>
    </div>
    <div id="tt-pageContent">
      <div class="container-indent">
        <div class="container">
          <h1 class="tt-title-subpages noborder">XÁC THỰC EMAIL</h1>
          <div class="tt-login-form">
            <div class="row justify-content-center">
              <div class="col-md-8 col-lg-6">
                <div class="tt-item">
                  <h2 class="tt-title">
                    Nhập mã xác thực đã gửi ở <%= user.email %>
                  </h2>
                  <%if (message != "undefined") { %>
                  <div
                    class="form-group form-control error"
                    style="background-color: #FFCCCC; font-weight: bold; color : rgb(210, 29, 29)"
                  >
                    <%= message %>
                  </div>
                  <% } %>
                  <div class="form-default">
                    <form
                      id="createaccount"
                      method="post"
                      novalidate="novalidate"
                      action="/verify-email"
                    >
                      <div class="form-group">
                        <label for="loginInputEmail">Nhập mã xác thực *</label>
                        <input
                          type="text"
                          name="token"
                          class="form-control"
                          id="confirm"
                          placeholder="Mã xác thực"
                        />
                      </div>

                      <div class="row">
                        <div class="col-auto">
                          <div class="form-group">
                            <button class="btn btn-border" type="submit">
                              Xác thực
                            </button>
                          </div>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <% include partials/footer %>
    </footer>
    <a href="#" class="tt-back-to-top">BACK TO TOP</a>
    <!-- Partials -->
    <% include partials/modal-addtocartproduct %> <% include
    partials/modal-quickviewmodal %> <% include partials/modal-videoproduct %>
    <% include partials/modal-subscribegood %> <% include
    partials/modal-newsletter %> <% include partials/script %>
  </body>
</html>
